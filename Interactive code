  <body>
    <div id='map'></div>
    <script>
    mapboxgl.accessToken = 'pk.eyJ1IjoiajIxb25nY29sIiwiYSI6ImNrNml5YmVzbzA2MjYzc244dzg1aGxsYngifQ.9rSfmfEL7F1X5sa6e8k8Bg'; // replace this with your access token
    var map = new mapboxgl.Map({
      container: 'map',
      style: 'mapbox://styles/j21ongcol/ck6luzhpw0kgq1imtpanjskbh', // replace this with your style URL
      center: [-123.1126, 49.2418],
